{
    "compilerOptions": {
        "module": "CommonJS",
        "target": "ES2023",
        "esModuleInterop": true,
        "strict": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "paths": {
            "@/*": ["./src/*"],
            "@/internal/*": ["./src/internal/*"],
            "@/handlers/*": ["./src/handlers/*"]
        }
    },

    "include": ["./src/**/*"]
}